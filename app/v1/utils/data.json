{
    "mensaje_bienvenida": "Bienvenido a la API de Paises",
    "endpoints": [
        {
            "ruta": "/paises",
            "descripcion": "Para ver los paises disponibles"
        },
        {
            "ruta": "/pais/{id}",
            "descripcion": "Para ver los detalles de un pais",
            "ejemplo": "/pais/1234"
        },
        {
            "ruta": "/busqueda/{nombre}",
            "descripcion": "Para buscar un pais por Nombre, Capital o Continente",
            "ejemplo": "/busqueda/Argentina"
        },
        {
            "ruta": "/exportar/?correo=",
            "descripcion": "Para exportar los datos de los paises a un archivo CSV y enviarlo por correo",
            "ejemplo": "/exportar/?correo=vemo%40vemo.com.ar"
        },
        {
            "ruta": "/descarga",
            "descripcion": "Descargar el archivo excel con los datos de los paises"
        },
        {
            "ruta": "/docs",
            "descripcion": "Para ver la documentacion"
        },
        {
            "ruta": "/redoc",
            "descripcion": "Para ver la documentacion"
        }
    ]
}